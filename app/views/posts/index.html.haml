#posts
	- @posts.each do |post|
		.post
			%h2.title= link_to post.title, post
			%p.date
				Published at
				= time_ago_in_words(post.created_at)
				= post.user.email
			%p.comment.count
				= link_to post.comments.count, post
				Comments
			%p.likes
				= post.likes.count
				= (post.likes.count) == 1 ? 'Like' : 'Likes'
			%p
			Tags: #{raw post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ')}
			%p= link_to "Read Post", post_path(post)
			

				
