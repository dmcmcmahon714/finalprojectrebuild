#posts
	- @posts.each do |post|
		.post
			%h2.post.title= link_to post.title, post
			%p.date
				Published at
				= time_ago_in_words(post.created_at)
				= post.user.email
			%p.comment.count
				= link_to post.comments.count, post
				Comments
			%p.likes
				= post.likes.count
				= (post.likes.count) == 1 ? 'Like' : 'Likes'

			%p.tags
				= link_to {raw post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ')}
			
			

				
